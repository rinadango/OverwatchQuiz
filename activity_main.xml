<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.android.quizapp.MainActivity">

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/overwatch_circle_logo6"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Which video game company created Overwatch?"/>

    <RadioGroup
        android:id="@+id/q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Blizzard Ent."
            android:textColor="@color/textColor"
            android:id="@+id/q1A"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Riot Games"
            android:textColor="@color/textColor"
            android:id="@+id/q1B"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Valve Corp."
            android:textColor="@color/textColor"
            android:id="@+id/q1C"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 2"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="In which year was the game published?"/>

    <RadioGroup
        android:id="@+id/q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="2012"
            android:textColor="@color/textColor"
            android:id="@+id/q2A"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="2016"
            android:textColor="@color/textColor"
            android:id="@+id/q2B"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="2015"
            android:textColor="@color/textColor"
            android:id="@+id/q2C"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 3"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Which character is the cover girl of the game?"/>

    <RadioGroup
        android:id="@+id/q3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Mei"
            android:textColor="@color/textColor"
            android:id="@+id/q3A"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Sombra"
            android:textColor="@color/textColor"
            android:id="@+id/q3B"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Tracer"
            android:textColor="@color/textColor"
            android:id="@+id/q3C"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 4"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="How many characters are in Overwatch as of now?"/>

    <RadioGroup
        android:id="@+id/q4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="28"
            android:textColor="@color/textColor"
            android:id="@+id/q4A"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="24"
            android:textColor="@color/textColor"
            android:id="@+id/q4B"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="26"
            android:textColor="@color/textColor"
            android:id="@+id/q4C"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 5"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="How many playable roles are in Overwatch?"/>

    <RadioGroup
        android:id="@+id/q5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="6"
            android:textColor="@color/textColor"
            android:id="@+id/q5A"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="4"
            android:textColor="@color/textColor"
            android:id="@+id/q5B"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="3"
            android:textColor="@color/textColor"
            android:id="@+id/q5C"/>

    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 6"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="In what playable roles does every character fit?"/>

    <CheckBox
        android:id="@+id/q6A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/buttonTint"
        android:text="Defense"
        android:textColor="@color/textColor"
        />

    <CheckBox
        android:id="@+id/q6B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/buttonTint"
        android:text="Offense"
        android:textColor="@color/textColor"
        />

    <CheckBox
        android:id="@+id/q6C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/buttonTint"
        android:text="Attack"
        android:textColor="@color/textColor"
        />

    <CheckBox
        android:id="@+id/q6D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/buttonTint"
        android:text="Heal"
        android:textColor="@color/textColor"
        />

    <CheckBox
        android:id="@+id/q6E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/buttonTint"
        android:text="Tank"
        android:textColor="@color/textColor"
        />

    <CheckBox
        android:id="@+id/q6F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/buttonTint"
        android:text="Support"
        android:textColor="@color/textColor"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 7"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Who is the oldest character in the game?"/>

    <RadioGroup
        android:id="@+id/q7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Reinhardt"
            android:textColor="@color/textColor"
            android:id="@+id/q7A"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Soldier 76"
            android:textColor="@color/textColor"
            android:id="@+id/q7B"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Ana"
            android:textColor="@color/textColor"
            android:id="@+id/q7C"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 8"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Who is the youngest character in the game?"/>

    <RadioGroup
        android:id="@+id/q8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="D.VA"
            android:textColor="@color/textColor"
            android:id="@+id/q8A"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Mercy"
            android:textColor="@color/textColor"
            android:id="@+id/q8B"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/buttonTint"
            android:text="Orisa"
            android:textColor="@color/textColor"
            android:id="@+id/q8C"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/potg"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Play Of The Game"
        android:textAllCaps="true"
        android:onClick="pOTG"
        android:textColor="#1d1e22"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/score_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=" "
        android:textSize="30sp"
        android:textAppearance="?android:textAppearanceMedium"
        android:gravity="center"/>

    <Button
        android:id="@+id/reset"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Reset"
        android:textAllCaps="true"
        android:onClick="resetButton"
        android:textColor="#1d1e22"/>



</LinearLayout>
</ScrollView>


